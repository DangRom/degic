@model DegicEducation.Areas.Admin.Models.ChangePasswordViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="dashboard_graph">
        <div class="row x_title">
            <div class="col-md-6">
                <h2>Thêm mới feedback</h2>
            </div>
        </div>
        <div class="row">
            <form class="form-horizontal" asp-controller="Account" asp-action="ChangePassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="username" class="col-sm-2 control-label">User Name</label>
                    <div class="col-sm-10">
                        <input asp-for="UserName" class="form-control height-input" id="username">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="oldpassword" class="col-sm-2 control-label">Mật khẩu cũ</label>
                    <div class="col-sm-10">
                        <input asp-for="OldPassword" type="password" class="form-control height-input" id="oldpassword">
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="newpassword" class="col-sm-2 control-label">Mật khẩu mới</label>
                    <div class="col-sm-10">
                        <input asp-for="NewPassword" type="password" class="form-control height-input" id="newpassword">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
