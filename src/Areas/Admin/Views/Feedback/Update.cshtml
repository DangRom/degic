@model DegicEducation.Areas.Admin.Models.FeedbackViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="dashboard_graph">
        <div class="row x_title">
            <div class="col-md-6">
                <h2>Cập nhật feedback</h2>
            </div>
        </div>
        <div class="row">
            <form class="form-horizontal" asp-controller="Feedback" asp-action="Update" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <div class="form-group" hidden>
                    <label for="id" class="col-sm-2 control-label">Id</label>
                    <div class="col-sm-10">
                        <input asp-for="Id" class="form-control height-input" id="id">
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullname" class="col-sm-2 control-label">Tên</label>
                    <div class="col-sm-10">
                        <input asp-for="FullName" class="form-control height-input" id="fullname">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="avatar" class="col-sm-2 control-label">Ảnh đại diện</label>
                    <div class="col-sm-10">
                        <input asp-for="Avatar" class="form-control height-input" id="avatar">
                        <span asp-validation-for="Avatar" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                  <label for="chude" class="col-sm-2 control-label">Khóa học</label>
                  <div class="col-sm-3">
                        <select asp-for="CourseId" asp-items="ViewBag.ListCourse" class="form-control select-text" id="chude"></select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group">
                    <label for="content" class="col-sm-2 control-label">Nội dung</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Content" class="form-control" id="content"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
