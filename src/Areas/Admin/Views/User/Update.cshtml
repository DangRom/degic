@model DegicEducation.Areas.Admin.Models.UserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="dashboard_graph">
        <div class="row x_title">
            <div class="col-md-6">
                <h2>Cập nhật user</h2>
            </div>
        </div>
        <div class="row">
            <form class="form-horizontal" asp-controller="User" asp-action="Update" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="username" class="col-sm-2 control-label">UserName</label>
                    <div class="col-sm-10">
                        <input asp-for="UserName" class="form-control height-input" id="username" readonly>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control height-input" id="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullname" class="col-sm-2 control-label">FullName</label>
                    <div class="col-sm-10">
                        <input asp-for="FullName" class="form-control height-input" id="fullname">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                        <label class="col-sm-2"><input asp-for="Activated" checked/>  Kích hoạt</label>
                  </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
