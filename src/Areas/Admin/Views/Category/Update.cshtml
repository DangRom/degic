@model DegicEducation.Areas.Admin.Models.CategoryViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="dashboard_graph">
        <div class="row x_title">
            <div class="col-md-6">
                <h2>Cập nhật chủ đề</h2>
            </div>
        </div>
        <div class="row">
            <form class="form-horizontal" asp-controller="Category" asp-action="Update" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" hidden>
                    <label for="id" class="col-sm-2 control-label">Id</label>
                    <div class="col-sm-10">
                        <input asp-for="Id" class="form-control height-input" id="id">
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">Tên</label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control height-input" id="name"  onkeyup="ChangeToSlug();">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="alias" class="col-sm-2 control-label">Định danh</label>
                    <div class="col-sm-10">
                        <input asp-for="Alias" class="form-control height-input" id="alias">
                        <span asp-validation-for="Alias" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                  <label for="menucha" class="col-sm-2 control-label">Menu cha</label>
                  <div class="col-sm-3">
                        <select asp-for="ParrentId" asp-items="ViewBag.ListParrent" class="form-control select-text" id="menucha"></select>
                        <span asp-validation-for="ParrentId" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group">
                    <label for="add" class="col-sm-2 control-label">Ảnh đại diện</label>
                    <div class="col-sm-10">
                        <input asp-for="Image" class="form-control height-input" id="add">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="description" class="col-sm-2 control-label">Mô tả ngắn</label>
                    <div class="col-sm-10">
                        <input asp-for="Description" class="form-control height-input" id="description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="order" class="col-sm-2 control-label">Số thứ tự</label>
                    <div class="col-sm-1">
                        <input asp-for="Orders" class="form-control height-input" id="order">
                        <span asp-validation-for="Orders" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                        <label class="col-sm-2"><input asp-for="Activated" checked/> Hiển thị</label>
                        <label class="col-sm-2"><input asp-for="ClassType"/> Khóa học</label>
                  </div>
                </div>
                <div class="form-group">
                    <label for="content" class="col-sm-2 control-label">Nội dung</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Content" class="form-control" id="content"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
