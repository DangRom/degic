@model DegicEducation.Areas.Admin.Models.ImageViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="dashboard_graph">
        <div class="row x_title">
            <div class="col-md-6">
                <h2>Thêm mới hình ảnh</h2>
            </div>
        </div>
        <div class="row">
            <form class="form-horizontal" asp-controller="Image" asp-action="New" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="imagename" class="col-sm-2 control-label">Tên</label>
                    <div class="col-sm-4">
                        <input asp-for="iName" class="form-control height-input" id="imagename">
                        <span asp-validation-for="iName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="ime" class="col-sm-2 control-label">Hình ảnh</label>
                    <div class="col-sm-10">
                        <input asp-for="iImage" class="form-control height-input" id="ime">
                        <span asp-validation-for="iImage" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10"> 
                        <label class="col-sm-2"><input asp-for="iGallery"/>  Gallery</label>
                        <label class="col-sm-4"><input asp-for="iCustomer"/>  Khách hàng</label>
                  </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
